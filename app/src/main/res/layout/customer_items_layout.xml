<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardElevation="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:padding="10dp">

        <TextView
            android:id="@+id/customer_bisiness"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="שם עסק"
            android:textColor="@android:color/white"
            android:textSize="16dp"
            android:textStyle="bold"
            android:gravity="right"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:id="@+id/customer_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="עיר"
            android:textColor="@android:color/white"
            android:textSize="14dp"
            android:gravity="right"
            android:textStyle="bold"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/customer_bisiness"/>

        <TextView
            android:id="@+id/customer_lname"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="שם משפחה"
            android:textColor="@android:color/white"
            android:textSize="14dp"
            android:gravity="right"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/customer_city"/>
        <TextView
            android:id="@+id/customer_fname"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="שם פרטי"
            android:textColor="@android:color/white"
            android:textSize="14dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:textAlignment="viewEnd"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="5dp"
            android:layout_below="@+id/customer_city"/>

        <TextView
            android:id="@+id/customer_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="טלפון"
            android:textColor="@android:color/white"
            android:textSize="14dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
           android:gravity="right"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="5dp"
            android:layout_below="@+id/customer_fname"/>





    </RelativeLayout>
</android.support.v7.widget.CardView>