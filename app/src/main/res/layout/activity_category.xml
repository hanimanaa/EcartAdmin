<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CategoryActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/cat_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="קטיגוריה חדש"
                android:textStyle="italic"
                android:layout_alignParentTop="true"
                android:layout_marginTop="100dp"
                android:gravity="center"
                android:textSize="40sp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                />

            <ImageView
                android:id="@+id/logo1"
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:layout_below="@+id/cat_name"
                android:src="@drawable/new_user"/>

            <EditText
                android:id="@+id/EtCatName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:textDirection="rtl"
                android:background="@drawable/input_design"
                android:padding="20dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/logo1"
                android:hint="שם קטיגוריה"
                />

            <Button
                android:id="@+id/AddCat_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/EtCatName"
                android:background="@drawable/buttons"
                android:padding="20dp"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:text="הוספה"
                android:textColor="@android:color/white"/>


        </RelativeLayout>


</RelativeLayout>