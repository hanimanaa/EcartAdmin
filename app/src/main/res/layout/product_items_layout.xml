<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="15dp">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/product_name_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="שם מוצר"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/product_image_item"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_weight="5"
                android:layout_below="@+id/product_name_item"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:layout_marginTop="25dp"


                />

            <TextView
                android:id="@+id/product_description_item"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:text="תאור מוצר"
                android:layout_weight="5"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="16dp"
                android:layout_below="@+id/product_name_item"
                android:textColor="@color/colorPrimaryDark"
                />


        </LinearLayout>


        <TextView
            android:id="@+id/product_price_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="מחיר"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:textAlignment="center"
            android:textSize="16dp"
            android:layout_below="@+id/product_description_item"
            android:textColor="@color/colorPrimaryDark"
            />

    </LinearLayout>

</android.support.v7.widget.CardView>